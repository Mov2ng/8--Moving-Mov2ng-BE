generator client {
  provider = "prisma-client-js"
}

generator client_default {
  provider        = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String           @id @default(uuid())
  email          String
  password       String
  phone_number   String
  name           String
  profileImage   String?
  role           Role             @default(USER)
  provider       provider         @default(LOCAL)
  isDelete       Boolean          @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  driver         Driver[]
  favoriteDriver FavoriteDriver[]
  likes          Like[]
  notice         Notice[]
  region         Region[]
  requests       Request[]
  reviews        Review[]
  service        Service[]

  @@unique([email, role])
  @@unique([phone_number, role])
}

model Service {
  id        Int      @id @default(autoincrement())
  user_id   String
  category  Category
  isDelete  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [user_id], references: [id])
}

model Region {
  id        Int        @id @default(autoincrement())
  user_id   String
  region    RegionType
  isDelete  Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [user_id], references: [id])
}

model Notice {
  id             Int        @id @default(autoincrement())
  user_id        String
  notice_type    NoticeType
  notice_title   String
  notice_content String
  isDelete       Boolean    @default(false)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  user           User       @relation(fields: [user_id], references: [id])
}

model Driver {
  id             Int              @id @default(autoincrement())
  user_id        String
  nickname       String
  driver_years   Int?
  driver_intro   String?
  driver_content String?
  isDelete       Boolean          @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  user           User             @relation(fields: [user_id], references: [id])
  favoriteDriver FavoriteDriver[]
  likes          Like[]
  review         Review[]
  estimates      estimate[]
}

model Like {
  id        Int      @id @default(autoincrement())
  driver_id Int
  user_id   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  driver    Driver   @relation(fields: [driver_id], references: [id])
  user      User     @relation(fields: [user_id], references: [id])
}

model Review {
  id             Int      @id @default(autoincrement())
  driver_id      Int
  user_id        String
  review_title   String?
  review_content String?
  rating         Int
  isDelete       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  driver         Driver   @relation(fields: [driver_id], references: [id])
  user           User     @relation(fields: [user_id], references: [id])
}

model FavoriteDriver {
  id        Int      @id @default(autoincrement())
  driver_id Int
  user_id   String
  isDelete  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  driver    Driver   @relation(fields: [driver_id], references: [id])
  user      User     @relation(fields: [user_id], references: [id])
}

model Request {
  id          Int        @id @default(autoincrement())
  user_id     String
  moving_type Category
  moving_data DateTime
  origin      String
  destination String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [user_id], references: [id])
  estimates   estimate[]
}

model estimate {
  id            Int            @id @default(autoincrement())
  request_id    Int
  driver_id     Int
  status        EstimateStatus
  request_reson String?
  isRequest     Boolean        @default(false)
  price         Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  driver        Driver         @relation(fields: [driver_id], references: [id])
  request       Request        @relation(fields: [request_id], references: [id])
}

model History {
  id         Int       @id @default(autoincrement())
  table_name tableName
  task_type  TaskType
  data       String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

enum Role {
  USER
  DRIVER
}

enum provider {
  LOCAL
}

enum Category {
  SMALL
  HOME
  OFFICE
}

enum RegionType {
  SEOUL
  GYEONGGI
  INCHEON
  GANGWON
  CHUNGBUK
  CHUNGNAM
  SEJONG
  DAEJEON
  JEONBUK
  JEONNAM
  GWANGJU
  GYEONGBUK
  GYEONGNAM
  DAEGU
  ULSAN
  BUSAN
  JEJU
}

enum NoticeType {
  NEW_ORDER
  ORDER_ACCSESS
  MOVE_TIME
}

enum EstimateStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
}

enum tableName {
  USER
  SERVICE
  REGION
  NOTICE
  DRIVER
  LIKE
  REVIEW
  FavoriteDriver
  Request
  estimate
}

enum TaskType {
  CREATE
  UPDATE
  DELETE
}
